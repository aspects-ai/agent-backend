NEXT_PUBLIC_AGENTBE_BACKEND_TYPE=...
AGENTBE_WORKSPACE_ROOT=...
REMOTE_VM_HOST=...
REMOTE_VM_USER=...
REMOTE_VM_PASSWORD=...

# MCP Mode - when true, uses Vercel AI SDK + MCP server instead of Codebuff SDK + direct workspace
USE_MCP=false

# Required when USE_MCP=true (Vercel AI SDK uses OpenRouter)
OPENROUTER_API_KEY=...

# Remote MCP Configuration (optional)
# When both are set, NextJS connects to a remote MCP server instead of spawning a local one.
# REMOTE_MCP_URL=http://localhost:3001
# REMOTE_MCP_AUTH_TOKEN=your-secure-auth-token